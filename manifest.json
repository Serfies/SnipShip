{
  "manifest_version": 3,
  "name": "AraAo",
  "version": "1.0",
  "description": "Araao: Your path (Ara) to the cloud (Ao). Connect any webpage to Gemini, ChatGPT, and your own agentic workflows via webhooks.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}