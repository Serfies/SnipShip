{
  "manifest_version": 3,
  "name": "SnipShip",
  "version": "1.0",
  "description": "Send selected text to n8n or other webhooks and display the response.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}